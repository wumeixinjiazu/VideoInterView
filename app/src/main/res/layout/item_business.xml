<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F1F1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_business"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="30dp"
            android:background="@drawable/ic_business_car"
            android:padding="20dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_business_mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_business_mask"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/rl_item"
        app:layout_constraintEnd_toEndOf="@id/rl_item"
        app:layout_constraintStart_toStartOf="@id/rl_item"
        app:layout_constraintTop_toTopOf="@id/rl_item" />

    <ImageView
        android:id="@+id/iv_business_choose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:background="@drawable/ic_red_choose"
        app:layout_constraintEnd_toEndOf="@id/rl_item"
        app:layout_constraintTop_toTopOf="@id/rl_item" />


</androidx.constraintlayout.widget.ConstraintLayout>